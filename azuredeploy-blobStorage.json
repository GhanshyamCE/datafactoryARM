{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "storageAccountName": [
      "[concat('report',uniqueString(resourceGroup().id))]",
      "[concat('log',uniqueString(resourceGroup().id))]",
      "[concat('data',uniqueString(resourceGroup().id))]",
      "[concat('file',uniqueString(resourceGroup().id))]"
    ]
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[variables('storageAccountName')[copyIndex()]]",
      "apiVersion": "2019-04-01",
      "location": "[parameters('location')]",
      "comments": "Storage account ",
      "tags": {
        "displayName": "Storage Account"
      },
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {},
      "copy":
      {
        "name":"storage",
        "count":4
      }

    }
  ],
  "outputs": {
    "AzureStorage_connectionString": {
      "type": "securestring",
           
          "value": "[concat('DefaultEndpointsProtocol=https;AccountName=',variables('storageAccountName')[0],';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')[0]), '2016-01-01').keys[0].value)]"
    }
  }
}
